{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "prisma:format": "prisma format",
    "prisma:validate": "prisma validate",
    "prisma:generate": "prisma generate",
    "prisma:pull": "export DATABASE_URL=$DATABASE_WRITER_URL && prisma db pull && export DATABASE_URL=$DATABASE_READER_URL && prisma db pull && export DATABASE_URL=",
    "prisma:push": "export DATABASE_URL=$DATABASE_WRITER_URL && prisma db push && export DATABASE_URL=$DATABASE_READER_URL && prisma db push && export DATABASE_URL=",
    "migrate:status": "export DATABASE_URL=$DATABASE_WRITER_URL && prisma migrate status && export DATABASE_URL=$DATABASE_READER_URL && prisma migrate status && export DATABASE_URL=",
    "migrate:dev": "export DATABASE_URL=$DATABASE_WRITER_URL && prisma migrate dev && export DATABASE_URL=$DATABASE_READER_URL && prisma migrate dev && export DATABASE_URL=",
    "migrate:deploy": "export DATABASE_URL=$DATABASE_WRITER_URL && prisma migrate deploy && export DATABASE_URL=$DATABASE_READER_URL && prisma migrate deploy && export DATABASE_URL=",
    "migrate:reset": "if [ \"$NODE_ENV\" != \"production\" ]; then export DATABASE_URL=$DATABASE_WRITER_URL && prisma migrate reset && export DATABASE_URL=$DATABASE_READER_URL && prisma migrate reset && export DATABASE_URL=; fi",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@as-integrations/express5": "^1.1.2",
    "@nestjs/apollo": "^13.2.1",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/graphql": "^13.2.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.65.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.206.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@prisma/client": "^6.17.1",
    "@prisma/instrumentation": "^6.17.1",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "graphql": "^16.11.0",
    "jwks-rsa": "^3.2.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prisma": "^6.17.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "i18n-js": "^4.5.1",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
