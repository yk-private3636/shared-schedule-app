model RelationshipCategory {
  id      String                     @id @db.Uuid /// カテゴリID
  user_id String                     @db.Uuid /// ユーザーID
  name    String                     @db.VarChar(30) /// カテゴリ名
  kind    RelationshipCategoryKind   @default(CUSTOM) /// カテゴリ種別
  status  RelationshipCategoryStatus @default(ACTIVE) /// ステータス

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt()

  user                 User                  @relation(fields: [user_id], references: [id], onUpdate: Cascade, onDelete: NoAction) /// ユーザーID
  sharingRelationships SharingRelationship[]

  @@index([user_id])

  @@map("relationship_categories")
}

enum RelationshipCategoryKind {
  DEFAULT @map("0") // デフォルトカテゴリ
  CUSTOM  @map("1") // カスタムカテゴリ
}

enum RelationshipCategoryStatus {
  ACTIVE   @map("0") // 有効
  INACTIVE @map("1") // 一時無効
  ARCHIVED @map("2") // アーカイブ
}
